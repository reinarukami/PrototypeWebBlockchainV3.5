@model PrototypeWebBlockchain.Models.Image

@{
    ViewBag.Title = "UploadImagePost";
}

<h2>UploadImagePost</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Image</h4>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.id)

        <div class="form-group">
            @Html.LabelFor(model => model.hash, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.hash, new { htmlAttributes = new { @class = "form-control", id = "hash" } })
                @Html.ValidationMessageFor(model => model.hash, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


@section scripts{
    <script src="~/node_modules/web3/dist/web3.min.js"></script>
    <script src="~/Scripts/WebMainConfig.js"></script>
    <script src="~/Scripts/uploadtransaction.js"></script>
}
